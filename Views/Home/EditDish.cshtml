@model Dish
@{
    ViewData["Title"] = "EditDish";
    ViewData["h1"] = $"Edit {@Model.Name}";
}


<div class="container">
    <form asp-action="UpdateDish" asp-route-dishId="@Model.DishId" method="post" asp-controller="Home">
        <div class="row align-items-start">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Chef"></label>
                    <input asp-for="Chef" class="form-control" />
                    <span asp-validation-for="Chef" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness">
                        @{
                            for (int i = 1; i <= 5; i++)
                            {
                                <option value=@i>@i</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="submit" value="Edit Dish" class="btn btn-secondary mt-2">
            </div>
        </div>

    </form>
</div>